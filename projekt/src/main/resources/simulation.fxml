<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<?import javafx.scene.control.TextArea?>
<BorderPane fx:controller="agh.ics.oop.presenter.SimulationPresenter"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="600.0" minWidth="800.0">

    <!-- Centralny widok: siatka symulacji -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <StackPane>
                <GridPane fx:id="mapGrid" style="-fx-background-color: #eeeeee;"/>
            </StackPane>
        </ScrollPane>
    </center>

    <!-- Górna część: Tytuł/Opis -->
    <top>
        <HBox spacing="10" style="-fx-padding: 10; -fx-alignment: center;">
            <Button text="Pauzuj" onAction="#pauseSimulation" />
            <Button text="Wznów" onAction="#resumeSimulation" />
        </HBox>
    </top>

    <!-- Dolna część: Informacje dodatkowe -->
    <bottom>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label fx:id="descriptionLabel" text="Status symulacji" style="-fx-font-size: 14;" />
            <TextArea fx:id="reportTextArea" editable="false" wrapText="true" style="-fx-pref-height: 200;" />
        </VBox>
    </bottom>

</BorderPane>
