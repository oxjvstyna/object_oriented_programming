<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<BorderPane fx:controller="agh.ics.oop.presenter.SimulationPresenter"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            minHeight="600.0" minWidth="800.0">

    <!-- Centralny widok: siatka symulacji -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED">
            <StackPane>
                <GridPane fx:id="mapGrid" style="-fx-background-color: #eeeeee;"/>
            </StackPane>
        </ScrollPane>
    </center>

    <!-- Górna część: Tytuł/Opis -->
    <top>
        <HBox spacing="10" style="-fx-padding: 10; -fx-alignment: center;">
            <Button text="Pauzuj" onAction="#pauseSimulation" />
            <Button text="Wznów" onAction="#resumeSimulation" />
            <Button text="Generuj Raport" onAction="#generateReport" />
        </HBox>
    </top>

    <!-- Dolna część: Informacje dodatkowe -->
    <bottom>
        <VBox spacing="10" style="-fx-padding: 10;">
            <HBox spacing="10">
                <TextField fx:id="animalIdField" promptText="Enter animal ID" />
                <Button text="Track Animal" onAction="#trackAnimalById" />
            </HBox>

            <Label fx:id="descriptionLabel" text="Status symulacji" style="-fx-font-size: 14;" />

            <!-- Nowe etykiety do wyświetlania informacji o śledzonym zwierzęciu -->
            <HBox spacing="10">
                <Label text="Energie:" />
                <Label fx:id="followedAnimalEnergyLabel" text="-" />
            </HBox>
            <HBox spacing="10">
                <Label text="Dzień narodzin:" />
                <Label fx:id="followedAnimalBirthDayLabel" text="-" />
            </HBox>
            <HBox spacing="10">
                <Label text="Dzień śmierci:" />
                <Label fx:id="followedAnimalDeathDayLabel" text="-" />
            </HBox>
            <HBox spacing="10">
                <Label text="Liczba potomków:" />
                <Label fx:id="followedAnimalChildrenCountLabel" text="-" />
            </HBox>
            <HBox spacing="10">
                <Label text="Liczba potomków (descendants):" />
                <Label fx:id="followedAnimalDescendantsCountLabel" text="-" />
            </HBox>
            <HBox spacing="10">
                <Label text="Genotyp:" />
                <Label fx:id="followedAnimalGenotypeLabel" text="-" />
            </HBox>
            <HBox spacing="10">
                <Label text="Indeks aktywnego genu:" />
                <Label fx:id="followedAnimalActiveGeneIndexLabel" text="-" />
            </HBox>
            <HBox spacing="10">
                <Label text="Zjedzone rośliny:" />
                <Label fx:id="followedAnimalPlantsEatenLabel" text="-" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
